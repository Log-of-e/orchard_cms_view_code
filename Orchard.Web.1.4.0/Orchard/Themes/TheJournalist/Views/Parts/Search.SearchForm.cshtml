@using Orchard.Search.ViewModels;
@using(Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { id = "searchform" })) { 
    <div>
        @Html.TextBox("q", (SearchViewModel)Model.ViewModel.Query, new { id = "s" })
        <input type="submit" value="@T("Search")" />
    </div>
}